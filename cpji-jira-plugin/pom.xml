	<profiles>
		<profile>
			<id>deployPassedArtifact</id>
			<!-- WARNING - lifecycle hacking in progress -->
			<build>
				<defaultGoal>initialize</defaultGoal>
				<plugins>
					<plugin>
						<artifactId>maven-deploy-plugin</artifactId>
						<executions>
							<execution>
								<phase>initialize</phase>
								<goals>
									<goal>deploy</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>build-helper-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>attach-artifact</id>
								<phase>validate</phase>
								<goals>
									<goal>attach-artifact</goal>
								</goals>
							   <configuration>
								   <artifacts>
									   <artifact>
										   <file>${project.basedir}/passedArtifacts/${project.build.finalName}.jar</file>
										   <type>jar</type>
									   </artifact>
								   </artifacts>
							   </configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
